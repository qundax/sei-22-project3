<%= form_with scope: :carpark, url: carparks_path, local: true do |form| %>
	<%= form.collection_select :region_id, @regions, :id, :regionname %>
  <p>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </p>

  <p>
    <%= form.label :totallots %><br>
    <%= form.text_area :totallots %>
  </p>

  <p>
    <%= form.label :photo_url %><br>
    <%= form.text_area :photo_url %>
  </p>


  <p>
    <%= form.submit %>
  </p>
<% end %>