<p>
  <strong>Location:</strong>
  <%= @carpark.location %>
</p>

<p>
  <strong>Photo url:</strong>
  <%= @carpark.photo_url %>
</p>


<p>
  <strong>Lots taken:</strong>
  <%= @carpark.reservedlots %>
</p>


<p>
  <strong>Lots remaining:</strong>
  <%= @carpark.totallots - @carpark.reservedlots %>
</p>


      <% if @carpark.totallots - @carpark.reservedlots == 0 %>
      	<div>	No more season parking lots. Try again another time </div>
      	 <div class="col-3">
      		<p><%= link_to 'Remove application for season parking', carpark_path(@carpark),
        	method: :delete,
        	data: { confirm: 'Are you sure?' } %></p>
      	</div>

      <% elsif @carpark.reservedlots == 0 %>
      	<div><%= link_to 'Apply for season parking', edit_carpark_path(@carpark) %></div>
      	    		 <div class="col-3">
      <% else %>

      	<div><%= link_to 'Apply for season parking', edit_carpark_path(@carpark) %></div>
      	    		 <div class="col-3">
      		<p><%= link_to 'Remove application for season parking', carpark_path(@carpark),
        	method: :delete,
        	data: { confirm: 'Are you sure?' } %></p>
      	</div>
      	<% end %>


