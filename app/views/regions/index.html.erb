<% end %>

<div class="container-fluid my-5 w-75">
	<h2 class="my-5">All Regions</h2>

	<div class = "row">
		<% @regions.each do |region| %>
		<div class = "col-3 border pt-3 pb-3">
			<p> <%= region.regionname %> </p>
			<%= puts region.carparks.inspect %>
			<%= puts region.carparks.exists? %>
			<% if region.carparks.exists? %>
			<% region.carparks.each do |carpark| %>
			<p>Carpark: <%= carpark.location %></p>
			<div><%= link_to 'Show', carpark_path(carpark) %></div>
			<% end%>
			<% else %>
			<p> No carpark in this region</p>
			<% end %>
		</div>
		<% end %>
	</div>
</div>