<div class ="row mt-4">
	<div class="col-12 text-center border">
		<h1>All regions</h1>
	</div>
</div>

<div class = "row">
<% @regions.each do |region| %>
	<div class = "col-3 border pt-3 pb-3">
		<p> <%= region.regionname %> </p>
		<%= puts region.carpark.inspect %>
		<%= puts region.carpark.exists? %>
		<% if region.carpark.exists? %>
		<% region.carpark.each do |carpark| %>
		<p>Carpark: <%= carpark.location %></p>
		<div><%= link_to 'Show', carpark_path(carpark) %></div>
		<% end%>
		<% else %>
		<p> No carpark in this region</p>
		<% end %>
	</div>
<% end %>
</div>