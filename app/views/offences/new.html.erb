<div class="container-fluid main-content">
	<h2>Offensive attack</h2>

	<%= form_with scope: :offence, url: offences_path, local: true do |form| %>
	<div class="form-group">
		<h5>Location of offence: <%= @carpark.location %></h5>
		<%= form.collection_select :lot_id, @carpark.lots, :id, :lotNumber %>
	</div>
	<div class="form-group">
		<h5>Offending Plate Number</h5>
		<%= form.text_field :offendingPlateNumber %>
	</div>

	<div class="actions my-4">
		<button type="submit" class="btn btn-primary">Submit</button>
	</div>

	<p><%= link_to 'Back', lots_path %></p>
	<% end %>
</div>