<div class="container-fluid main-content">
	<h2>Edit Vehicle Details</h2>

	<%= form_with scope: :vehicle, model: @vehicle, local: true do |form| %>
	<% if @vehicle.errors.any? %>
	<div id="error_explanation">
		<h5 class="text-danger">
			<%= pluralize(@vehicle.errors.count, "error") %> occurred:
		</h5>
		<ul>
			<% @vehicle.errors.full_messages.each do |msg| %>
			<li class="text-danger"><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>

	<div class="form-group">
		<div class="field">
			<%= form.label :license_plate %><br>
			<%= form.text_field :license_plate %>
		</div>
	</div>

	<div class="form-group">
		<div class="field">
			<%= form.label :vehicle_model %><br>
			<%= form.text_field :vehicle_model %>
		</div>
	</div>

	<div class="actions my-4">
		<button type="submit" class="btn btn-primary">Edit Vehicle</button>
	</div>

	<p><%= link_to 'Back', vehicles_path %></p>
	<% end %>
</div>