<div class ="row mt-4">
	<div class="col-12 text-center border">
	<h1>Lot Admin page </h1>
	</div>
</div>
<div class ="row ">
	<div class="col-12 text-center border pt-4 pb-4">
<h2>Car Park Location:  <%= @carpark.location %></h2>
	</div>
</div>

<div class ="row ">
	<div class="col-12 text-center border pt-4 pb-4">
<h2>Lots allocated:  <%= @carpark.lots.count %></h2>
	</div>
</div>


<div class ="row ">
 <% @carpark.lots.each do |lot| %>
 <div class = "col-3 text-center border pt-4 pb-4">
      <div><%= lot.lotNumber %></div>
      <% if lot.taken %>
      	<div>Status: Taken</div>
      <% else %>
      	<div>Status: Not Taken</div>
      	<% end %>
      	<div><%= link_to 'Edit Lot', edit_lot_path(lot) %></div>
      	<p><%= link_to 'Remove lot', lot_path(lot),
        	method: :delete,
        	data: { confirm: 'Are you sure?' } %></p>
        </div>

<% end %>

</div>

<%= link_to 'Back to carpark', carparks_path %>