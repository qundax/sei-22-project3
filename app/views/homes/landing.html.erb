<div id="navbar" class="d-flex justify-content-between">
	<a href="/">
		<div id="logo">
			<%= image_tag 'logo.png', style: 'height: 100%;' %>
		</div>
	</a>

	<nav class="navbar navbar-expand">
		<ul class="navbar-nav">
			<% unless current_user || current_admin || current_summon %>
