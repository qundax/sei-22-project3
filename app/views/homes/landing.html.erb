	<div class="row no-gutter align-items-center m-0">
		<div class="col text-center p-0 d-flex align-items-center">
			<%= image_tag 'cover.jpg', class: "w-100 img-fluid position-relative mx-auto", style: 'opacity: 0.8;'%>
			<div id="title" class="w-100 position-absolute my-auto">
				<div>
					<h1>ParkingGoWhere</h1>
					<h2>Season Parking Simplified.</h2>
				</div>
			</div>
		</div>
