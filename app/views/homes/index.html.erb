<% if admin_signed_in? %>
	<div id="navbar" class="d-flex justify-content-between">
	<a href="/">
		<div id="logo">
			<%= image_tag 'logo.png', style: 'height: 100%;' %>
		</div>
	</a>

		<div id="user-actions" class="my-2">
			<nav class="navbar navbar-expand">
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<%= link_to 'Log Out', destroy_admin_session_url, method: :delete, :class=>"nav-link" %>
						</li>
					</ul>
				</div>
			</nav>
		</div>
	</div>

	<h2>FM Dashboard</h2>
	<br>
	<%= link_to 'All Carparks', carparks_path, :class => 'btn btn-primary' %>
	<%= link_to 'All Regions', regions_path, :class => 'btn btn-secondary' %>
	<br><br>
	<table class='table'>
		<thead>
			<tr>
				<th scope='col'>Carparks</th>
				<th scope='col'>Region</th>
				<th scope='col'>Postal Code</th>
				<th scope='col'>Occupancy</th>
			</tr>
		</thead>
		<tbody>
			<% @carparks.each do |carpark| %>
				<tr>
					<td><%= link_to carpark.location, carpark_path(carpark) %></td>
					<td><%= carpark.region.regionname %></td>
					<td><%= carpark.region.postalcode %></td>
					<td><%= carpark.reservedlots %> / <%= carpark.totallots %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

<% else %>
	<div id="navbar" class="d-flex justify-content-between">
    <a href="/">
      <div id="logo">
        <%= image_tag 'logo.png', style: 'height: 100%;' %>
      </div>
    </a>

	<div id="user-actions" class="my-2">
		<nav class="navbar navbar-expand">
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a class="nav-link" href="/login/role">LOG IN</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/signup/role">SIGN UP</a>
					</li>
				</ul>
			</div>
		</nav>
	</div>

	<div id="cover" class="container-fluid p-0 w-100">
		<div class="row no-gutter align-items-center m-0">
			<div class="col text-center p-0 d-flex align-items-center">
				<%= image_tag 'cover.jpg', class: "w-100 img-fluid position-relative mx-auto", style: 'opacity: 0.8;'%>
				<div id="title" class="w-100 position-absolute my-auto">
					<div>
						<h1>ParkingGoWhere</h1>
						<h2>Season Parking Simplified.</h2>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>